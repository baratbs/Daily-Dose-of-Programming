#include<stdio.h>
#include<stdarg.h>

//function Declaraiton
//Funtions with variable number of arguments
int findmax(int,...);
/*The ellipses indicate that the number of arguments after the first arguments would be
different in different function call*/

int main(){
    int max;
    max=findmax(5,23,15,1,92,50);
    printf("maximum=%d\n",max);
    max=findmax(3,100,300,29);
    printf("maximum=%d\n",max);
    return 0;
}

int findmax(int tot_num,...){
    int max,count,num;
    va_list ptr;
    va_start(ptr,tot_num);
    max=va_arg(ptr,int);

    for(count=1;count<tot_num;count++){
        num=va_arg(ptr,int);

            if(num>max)
                max=num;
    }
    return(max);
}
